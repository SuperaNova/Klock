    <!-- Oxford Theme (Light) - Restoring full definitions -->
    <style name="Theme.Klock.Oxford" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Explicitly disable window action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Full Colors -->
        <item name="colorPrimary">@color/oxford_blue</item>
        <item name="colorPrimaryVariant">@color/eggshell_white_darkened</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/oxford_blue</item>
        <item name="colorSurface">@color/eggshell_white</item>
        <item name="colorOnSurface">@color/oxford_blue</item>
        <item name="colorPrimarySurface">@color/oxford_blue</item>
        <item name="colorOnPrimarySurface">@color/eggshell_white</item>
        <item name="android:textColorPrimary">@color/oxford_blue</item>
        <item name="android:textColorSecondary">@color/oxford_blue_alpha54</item>
        <item name="android:windowBackground">@color/eggshell_white</item>
        <item name="android:colorBackground">@color/eggshell_white</item>
    </style>

